!!! 5
%html{ lang: I18n.locale }
  %head
    = display_meta_tags
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    - if show_map?
      = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyBnb32biosnk9irpzOcu0PSjspD2U7ZJxY&callback=initMap', defer: true
    - if quotation_map?
      = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyBnb32biosnk9irpzOcu0PSjspD2U7ZJxY&callback=initQuotationMap', defer: true
    = csrf_meta_tags

    = render partial: 'layouts/application/analytics'
  %body
    = render partial: 'layouts/application/header'
    %main
      = yield

    - if show_map?
      #map.map
        / map will be load here using google maps api
    = render partial: 'layouts/application/footer'
