%script{ type: 'text/ng-template', id: '/clear-filters.html' }
  .clear-filters
    = link_to nil, 'ng-click' => 'clearFilters($event)' do
      %i.material-icons clear
      Remover filtros

.table-container
  %table{ ng: { table: 'table.tableParams', table_columns_binding: 'table.cols' }}

    %tr{ ng: { repeat: 'item in $data' }}
      %td
        %input{ type: :checkbox, class: 'decorated-checkbox box', 'checklist-model' => 'checkboxes.ids', 'checklist-value' => 'item.id' }

      %td{ data: { title: "'¿Activa?'" }, 'ng-if' => 'true', filter: "{ enabled_true: 'select' }", 'filter-data' => 'boolean_select_list', sortable: "'enabled'" }
        %input{ type: :checkbox, class: 'decorated-checkbox check', 'ng-model' => 'item.enabled', 'ng-click' => "submitField($event, 'enabled', item)" }

      %td{ data: { title: "'Nombre'" }, 'ng-if' => 'true', filter: "{ translations_name_icont: 'text' }", sortable: "'translations_name'" } {{ item.name }}

      %td{ data: { title: "'Prioridad'" }, 'ng-if' => 'true', sortable: "'priority'" } {{ item.priority }}

      %td{ data: { title: "'¿Mostrar en header?'" }, 'ng-if' => 'true', filter: "{ in_header_true: 'select' }", 'filter-data' => 'boolean_select_list', sortable: "'in_header'" }
        %input{ type: :checkbox, class: 'decorated-checkbox check', 'ng-model' => 'item.in_header', 'ng-click' => "submitField($event, 'in_header', item)" }

      %td{ data: { title: "'¿Mostrar en footer?'" }, 'ng-if' => 'true', filter: "{ in_footer_true: 'select' }", 'filter-data' => 'boolean_select_list', sortable: "'in_footer'" }
        %input{ type: :checkbox, class: 'decorated-checkbox check', 'ng-model' => 'item.in_footer', 'ng-click' => "submitField($event, 'in_footer', item)" }

      %td{ data: { title: '', filter: "{ actions: '/clear-filters.html' }" }}
        .action-buttons
          = link_to "#{model.to_s.pluralize.underscore}/{{ item.id }}/edit", class: 'text-primary' do
            %i.material-icons border_color
            Editar

          = link_to "#{model.to_s.pluralize.underscore}/{{ item.id }}", class: 'text-danger', method: :delete, data: { confirm: '¿Está seguro?' } do
            %i.material-icons delete
            Eliminar
